<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mecha_white">

        <!-- PLACA -->
        <EditText
            android:id="@+id/edtPlaca"
            android:hint="Placa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- MARCA -->
        <EditText
            android:id="@+id/edtMarca"
            android:hint="Marca"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- MODELO -->
        <EditText
            android:id="@+id/edtModelo"
            android:hint="Modelo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- AÑO -->
        <EditText
            android:id="@+id/edtAnio"
            android:hint="Año"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- COLOR -->
        <EditText
            android:id="@+id/edtColor"
            android:hint="Color"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- TIPO DE VEHÍCULO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/Carro"
                android:text="Carro"
                android:textColor="@color/mecha_gray_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/moto"
                android:text="Motocicleta"
                android:textColor="@color/mecha_gray_dark"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

