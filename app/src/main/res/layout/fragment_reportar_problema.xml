<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mecha_gray_light">

    <!-- TÍTULO -->
    <LinearLayout
        android:id="@+id/Aver"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/mecha_primary"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="@null"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/problem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/problem"
            android:background="@null"
            android:contentDescription="Mapa" />

        <ImageButton
            android:id="@+id/btnNotas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sharp_assignment_add_24"
            android:background="@null"
            android:contentDescription="Perfil" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reportar problema"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/mecha_gray_dark"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Aver"/>

    <!-- ID DEL MECÁNICO SELECCIONADO -->

    <!-- DESCRIPCIÓN -->
    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="Descripción del problema"
        android:background="@drawable/input_mecha"
        android:padding="15dp"
        android:gravity="top"
        android:textColor="@color/mecha_gray_dark"
        android:textColorHint="#808080"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID MECÁNICO -->


    <!-- PLACA -->
    <EditText
        android:id="@+id/etPlaca"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:hint="Placa del vehículo"
        android:textColorHint="#808080"
        android:background="@drawable/input_mecha"
        android:padding="15dp"
        android:textColor="@color/mecha_gray_dark"
        app:layout_constraintTop_toBottomOf="@id/etDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/msjadvert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPlaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- BOTÓN REPORTAR -->
    <Button
        android:id="@+id/btnReportarProblema"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="Siguiente"
        android:textStyle="bold"
        android:textColor="@color/mecha_white"
        android:backgroundTint="@color/mecha_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
