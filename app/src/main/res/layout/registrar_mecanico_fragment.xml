<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mecha_gray_light">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BOTÓN CERRAR -->
        <Button
            android:id="@+id/btncerrarregmec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:textStyle="bold"
            android:backgroundTint="@color/mecha_primary"
            android:textColor="@color/mecha_white"
            android:layout_gravity="end"/>

        <!-- CORREO -->
        <EditText
            android:id="@+id/correo"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- CONTRASEÑA -->
        <EditText
            android:id="@+id/contrasena"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- NOMBRE -->
        <EditText
            android:id="@+id/nombre"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- APELLIDO -->
        <EditText
            android:id="@+id/apellido"
            android:hint="Apellido"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- TELÉFONO -->
        <EditText
            android:id="@+id/telefono"
            android:hint="Teléfono"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- UBICACIÓN -->
        <EditText
            android:id="@+id/ubicacion"
            android:hint="Ubicación Google Maps"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- RFC / CURP -->
        <EditText
            android:id="@+id/avale"
            android:hint="RFC o CURP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_mecha"
            android:padding="14dp"
            android:textColor="@color/mecha_gray_dark"
            android:textColorHint="#808080"/>

        <!-- TIPO DE VEHÍCULO -->
        <CheckBox
            android:id="@+id/carro"
            android:text="Carro"
            android:textColor="@color/mecha_gray_dark"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/moto"
            android:text="Motocicleta"
            android:textColor="@color/mecha_gray_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- BOTÓN REGISTRAR -->
        <Button
            android:id="@+id/registrarMecanico"
            android:text="REGISTRAR MECÁNICO"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="@color/mecha_white"
            android:backgroundTint="@color/mecha_primary_dark"/>

    </LinearLayout>
</ScrollView>
