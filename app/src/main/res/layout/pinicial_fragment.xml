<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mecha_gray_light">

    <!-- Barra superior MECHA -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/mecha_primary"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡¡¡Bienvenido!!!"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/mecha_white"/>
    </LinearLayout>


    <!-- Contenedor de botones de navegación -->
    <LinearLayout
        android:id="@+id/msj"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/mecha_white"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <TextView
            android:id="@+id/msjprob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas un mecanico?"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/mecha_primary_dark"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botcon"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/mecha_white"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/msj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Reportar Problema"
            android:backgroundTint="@color/mecha_primary_dark"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>


    <!-- MAPA A PANTALLA COMPLETA DETECTANDO ESPACIOS -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/botcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>