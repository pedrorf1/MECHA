<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mecha_gray_light">

    <!-- Barra superior MECHA -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/mecha_primary"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MECHA"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/mecha_white"/>
    </LinearLayout>


    <!-- Contenedor de botones de navegaciÃ³n -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/mecha_white"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnInicio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/mecha_gray_dark"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnNotas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sharp_assignment_add_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="18dp"
            android:tint="@color/mecha_gray_dark"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnAyuda"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/problem"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="18dp"
            android:tint="@color/mecha_gray_dark"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnInfoPerfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/perfil"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="18dp"
            android:tint="@color/mecha_gray_dark"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btnBuscarM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/buscar_mecanico"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="18dp"
            android:tint="@color/mecha_gray_dark"
            tools:ignore="UseAppTint" />
    </LinearLayout>


    <!-- MAPA A PANTALLA COMPLETA DETECTANDO ESPACIOS -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/navBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>